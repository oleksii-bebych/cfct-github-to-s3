name: Upload Control Tower configuration to S3
on:
  push
env:
  BUCKET_NAME : "custom-control-tower-configuration-444629336067-eu-west-2"
  AWS_REGION : "eu-west-2"
# permission can be added at job level or workflow level
permissions:
  id-token: write   # This is required for requesting the JWT
  contents: read    # This is required for actions/checkout
jobs:
  S3PackageUpload:
    runs-on: ubuntu-latest
    steps:
      - name: Git clone the repository
        uses: actions/checkout@v4
      - name: configure aws credentials
        uses: aws-actions/configure-aws-credentials@v3
        with:
          role-to-assume: arn:aws:iam::444629336067:role/cfct-github-to-s3-role
          role-session-name: samplerolesession
          aws-region: ${{ env.AWS_REGION }}
      # Archive the folder
      - name:  Create ZIP archive
        run: |
          zip -r _custom-control-tower-configuration.zip .
      # Upload a file to AWS s3
      - name:  Copy index.html to s3
        run: |
          aws s3 cp ./index.html s3://${{ env.BUCKET_NAME }}/